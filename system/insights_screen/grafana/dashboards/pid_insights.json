{
  "uid": "pid-insights",
  "title": "PID Insights",
  "tags": [
    "control",
    "pid"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "PID Gains",
      "datasource": "Prometheus",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 9
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "pid_gain{axis=\"p\"}",
          "legendFormat": "P",
          "refId": "A"
        },
        {
          "expr": "pid_gain{axis=\"i\"}",
          "legendFormat": "I",
          "refId": "B"
        },
        {
          "expr": "pid_gain{axis=\"d\"}",
          "legendFormat": "D",
          "refId": "C"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "PID Update Rate",
      "datasource": "Prometheus",
      "gridPos": {
        "x": 0,
        "y": 9,
        "w": 24,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "rate(pid_set_total[1m])",
          "legendFormat": "{{axis}}",
          "refId": "A"
        }
      ]
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  }
}
